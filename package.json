{
  "name": "validatehome",
  "private": true,
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "db:generate": "turbo run db:generate --filter=@validatehome/db",
    "db:migrate": "turbo run db:migrate --filter=@validatehome/db",
    "db:push": "turbo run db:push --filter=@validatehome/db",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "lefthook": "^2.1.1",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  }
}
