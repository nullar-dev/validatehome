{
  "name": "@validatehome/db",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "db:check": "tsx src/scripts/check-db.ts",
    "db:generate": "pnpm build && drizzle-kit generate --schema=./dist/schema/index.js --dialect=postgresql --out=./drizzle",
    "db:migrate": "pnpm db:check && drizzle-kit migrate",
    "db:push": "pnpm build && drizzle-kit push --schema=./dist/schema/index.js --dialect=postgresql",
    "db:studio": "drizzle-kit studio",
    "db:seed": "pnpm db:check && tsx src/seed.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@validatehome/shared": "workspace:*",
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@validatehome/config": "workspace:*",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.31.9",
    "tsx": "^4.19.2",
    "vitest": "^4.0.18"
  }
}
