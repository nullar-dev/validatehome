{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalDependencies": ["biome.json", "pnpm-lock.yaml"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "next.config.ts", "vite.config.ts"],
      "env": ["NEXT_PUBLIC_API_URL", "NEXT_PUBLIC_SITE_URL"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "vitest.config.ts"],
      "outputs": ["coverage/**"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "vitest.config.ts"],
      "outputs": ["coverage/**"]
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "crawl:source": {
      "cache": false
    },
    "crawl:due": {
      "cache": false
    },
    "sources:pilot": {
      "cache": false
    },
    "sources:reset": {
      "cache": false
    },
    "sources:deactivate": {
      "cache": false
    },
    "replay:dlq": {
      "cache": false
    },
    "drill:resilience": {
      "cache": false
    },
    "benchmark:diff": {
      "cache": false
    },
    "report:kpis": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
